<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <%- include('./partials/bannerbar.ejs') %>
    
    <div class="category-content">
      <div class="category-banner-box">
        <% if (category_list !== 'undefined' && category_list.length > 0) { %>
        <% category_list.forEach(category => { %>
            <a href=<%= category.url %>>
              <div class="category-banner"><p><%= category.name %></p></div>
            </a>
        <% }) %>
        <% } else { %>
          <h1>There are not categories.</h1>
        <% } %>
      </div>
    </div>
  </body>
</html>