<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <%- include('./partials/bannerbar.ejs') %>

    <h3 class="category-delete-warning bg-dark">Please delete the products below before deleting this category</h3>
    
    <div class="category-content">
      <!-- If products in category are undefined and productsincategory length is more than 0, show the products -->
      <% if (productsInCategory !== 'undefined' && productsInCategory.length > 0) { %>
        <% productsInCategory.forEach(product => { %>
          <a href=<%= product.url %>>
          <div class="card" style="width: 18rem;">
            <img src="<%= product.imgurl %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <p class="card-name"><%= product.name %></p>
              <p class="category-name"><%= product.category.name %></p>
              <p class="product-price">$<%= product.price %></p>
            </div>
          </div>
          </a>
        <% }) %>
      <% } else { %>
        
        <form method="POST" action="">
          <h2>Would you like to delete the <i><%= category.name %></i> category?</h2>
          <div class="form-group">
            <input class="form-control" 
            id="categoryid" 
            type="hidden" 
            name="categoryid" 
            required="true" 
            value="<%= category._id %>"/>
          </div>
          <button class="delete-btn" type="submit">Delete</button>
        </form>
      <% } %>
    </div>
  </body>
</html>